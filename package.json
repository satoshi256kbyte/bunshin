{
    "name": "bunshin-cli",
    "version": "1.0.0",
    "description": "Convert CI/CD tool build action definitions to other tool formats",
    "main": "dist/index.js",
    "bin": {
        "bunshin": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "bunshin": "node dist/index.js",
        "prepublishOnly": "npm run build",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "test": "jest",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "keywords": [
        "cli",
        "typescript",
        "cicd",
        "converter",
        "build",
        "github-actions",
        "gitlab-ci",
        "jenkins"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.11.24",
        "typescript": "^5.3.3",
        "eslint": "^8.57.0",
        "@typescript-eslint/parser": "^7.1.0",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "prettier": "^3.2.5",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.12",
        "ts-jest": "^29.1.2",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}